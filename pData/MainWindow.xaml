<Window x:Class="pData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pData"
        mc:Ignorable="d"
        Title="Repo Overview" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Name="Datagrid" ItemsSource="{Binding TestBinding}" Margin="0,0,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Owner" IsReadOnly="True" Binding="{Binding Path=Owner}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Repo Name" IsReadOnly="True"  Binding="{Binding Path=Name}" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
